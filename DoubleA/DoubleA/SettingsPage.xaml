<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoubleA.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Default list source:"/>
            <RadioButton Content="MAL" x:Name="rbMAL" GroupName="defaultListSource" CheckedChanged="rbListSource_CheckedChanged"/>
            <RadioButton Content="AniList" x:Name="rbAnilist" GroupName="defaultListSource" CheckedChanged="rbListSource_CheckedChanged"/>

            <Button Text="Reset" Clicked="btnReset_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>